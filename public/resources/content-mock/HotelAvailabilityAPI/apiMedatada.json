{
    "apiInfo": {
        "apiName": "HotelAvailabilityAPI",
        "openApiDefinition": {
         "openapi": "3.0.1",
         "info": {
           "title": "Hotel Availability API",
           "description": "API for checking hotel availability and managing hotel reservations in a specified city",
           "version": "1.0.0"
         },
         "servers": [
           {
             "url": "https://stoplight.io/mocks/hotelavailability/hotelavailability/413823373",
             "description": "Main (production) server"
           },
           {
             "url": "https://stoplight.io/mocks/hotelavailability/hotelavailability/413823373",
             "description": "Staging server"
           }
         ],
         "paths": {
           "/hotels": {
             "get": {
               "summary": "Get a list of available hotels",
               "description": "Retrieve a list of available hotels in the specified city based on search criteria",
               "parameters": [
                 {
                   "in": "query",
                   "name": "city",
                   "schema": {
                     "type": "string"
                   },
                   "required": true,
                   "description": "The name of the city to search hotels in"
                 },
                 {
                   "in": "query",
                   "name": "check_in_date",
                   "schema": {
                     "type": "string",
                     "format": "date"
                   },
                   "required": true,
                   "description": "The check-in date for the hotel stay"
                 },
                 {
                   "in": "query",
                   "name": "check_out_date",
                   "schema": {
                     "type": "string",
                     "format": "date"
                   },
                   "required": true,
                   "description": "The check-out date for the hotel stay"
                 },
                 {
                   "in": "query",
                   "name": "guests",
                   "schema": {
                     "type": "integer"
                   },
                   "required": true,
                   "description": "The number of guests for the hotel stay"
                 },
                 {
                   "in": "query",
                   "name": "min_price",
                   "schema": {
                     "type": "number",
                     "format": "float"
                   },
                   "description": "Minimum price per night"
                 },
                 {
                   "in": "query",
                   "name": "max_price",
                   "schema": {
                     "type": "number",
                     "format": "float"
                   },
                   "description": "Maximum price per night"
                 },
                 {
                   "in": "query",
                   "name": "rating",
                   "schema": {
                     "type": "number",
                     "format": "float"
                   },
                   "description": "Minimum rating of the hotel"
                 }
               ],
               "responses": {
                 "200": {
                   "description": "A list of available hotels",
                   "content": {
                     "application/json": {
                       "schema": {
                         "type": "array",
                         "items": {
                           "$ref": "#/components/schemas/Hotel"
                         }
                       }
                     }
                   }
                 },
                 "400": {
                   "description": "Invalid parameters"
                 },
                 "500": {
                   "description": "Server error"
                 }
               }
             }
           },
           "/hotels/{id}": {
             "get": {
               "summary": "Get details of a specific hotel",
               "description": "Retrieve detailed information about a specific hotel",
               "parameters": [
                 {
                   "in": "path",
                   "name": "id",
                   "schema": {
                     "type": "string"
                   },
                   "required": true,
                   "description": "The ID of the hotel"
                 }
               ],
               "responses": {
                 "200": {
                   "description": "Hotel details",
                   "content": {
                     "application/json": {
                       "schema": {
                         "$ref": "#/components/schemas/Hotel"
                       }
                     }
                   }
                 },
                 "404": {
                   "description": "Hotel not found"
                 },
                 "500": {
                   "description": "Server error"
                 }
               }
             }
           },
           "/reservations": {
             "post": {
               "summary": "Create a new hotel reservation",
               "description": "Make a reservation at a hotel",
               "requestBody": {
                 "required": true,
                 "content": {
                   "application/json": {
                     "schema": {
                       "$ref": "#/components/schemas/NewReservation"
                     }
                   }
                 }
               },
               "responses": {
                 "201": {
                   "description": "Reservation created",
                   "content": {
                     "application/json": {
                       "schema": {
                         "$ref": "#/components/schemas/Reservation"
                       }
                     }
                   }
                 },
                 "400": {
                   "description": "Invalid request"
                 },
                 "500": {
                   "description": "Server error"
                 }
               }
             }
           },
           "/reservations/{id}": {
             "get": {
               "summary": "Get details of a specific reservation",
               "description": "Retrieve detailed information about a specific reservation",
               "parameters": [
                 {
                   "in": "path",
                   "name": "id",
                   "schema": {
                     "type": "string"
                   },
                   "required": true,
                   "description": "The ID of the reservation"
                 }
               ],
               "responses": {
                 "200": {
                   "description": "Reservation details",
                   "content": {
                     "application/json": {
                       "schema": {
                         "$ref": "#/components/schemas/Reservation"
                       }
                     }
                   }
                 },
                 "404": {
                   "description": "Reservation not found"
                 },
                 "500": {
                   "description": "Server error"
                 }
               }
             },
             "put": {
               "summary": "Update a reservation",
               "description": "Update details of an existing reservation",
               "parameters": [
                 {
                   "in": "path",
                   "name": "id",
                   "schema": {
                     "type": "string"
                   },
                   "required": true,
                   "description": "The ID of the reservation"
                 }
               ],
               "requestBody": {
                 "required": true,
                 "content": {
                   "application/json": {
                     "schema": {
                       "$ref": "#/components/schemas/NewReservation"
                     }
                   }
                 }
               },
               "responses": {
                 "200": {
                   "description": "Reservation updated",
                   "content": {
                     "application/json": {
                       "schema": {
                         "$ref": "#/components/schemas/Reservation"
                       }
                     }
                   }
                 },
                 "400": {
                   "description": "Invalid request"
                 },
                 "404": {
                   "description": "Reservation not found"
                 },
                 "500": {
                   "description": "Server error"
                 }
               }
             },
             "delete": {
               "summary": "Delete a reservation",
               "description": "Cancel a reservation at a hotel",
               "parameters": [
                 {
                   "in": "path",
                   "name": "id",
                   "schema": {
                     "type": "string"
                   },
                   "required": true,
                   "description": "The ID of the reservation"
                 }
               ],
               "responses": {
                 "204": {
                   "description": "Reservation deleted"
                 },
                 "404": {
                   "description": "Reservation not found"
                 },
                 "500": {
                   "description": "Server error"
                 }
               }
             }
           }
         },
         "components": {
           "schemas": {
             "Hotel": {
               "type": "object",
               "properties": {
                 "id": {
                   "type": "string",
                   "description": "The unique identifier for the hotel"
                 },
                 "name": {
                   "type": "string",
                   "description": "The name of the hotel"
                 },
                 "address": {
                   "type": "string",
                   "description": "The address of the hotel"
                 },
                 "city": {
                   "type": "string",
                   "description": "The city where the hotel is located"
                 },
                 "price_per_night": {
                   "type": "number",
                   "format": "float",
                   "description": "The price per night for the hotel"
                 },
                 "rating": {
                   "type": "number",
                   "format": "float",
                   "description": "The rating of the hotel"
                 },
                 "amenities": {
                   "type": "array",
                   "items": {
                     "type": "string"
                   },
                   "description": "A list of amenities provided by the hotel"
                 },
                 "description": {
                   "type": "string",
                   "description": "A detailed description of the hotel"
                 },
                 "availability": {
                   "type": "object",
                   "properties": {
                     "check_in_date": {
                       "type": "string",
                       "format": "date",
                       "description": "The check-in date for the hotel stay"
                     },
                     "check_out_date": {
                       "type": "string",
                       "format": "date",
                       "description": "The check-out date for the hotel stay"
                     },
                     "available_rooms": {
                       "type": "integer",
                       "description": "The number of available rooms for the specified dates"
                     }
                   }
                 }
               }
             },
             "NewReservation": {
               "type": "object",
               "properties": {
                 "hotel_id": {
                   "type": "string",
                   "description": "The ID of the hotel being reserved"
                 },
                 "guest_name": {
                   "type": "string",
                   "description": "The name of the guest making the reservation"
                 },
                 "check_in_date": {
                   "type": "string",
                   "format": "date",
                   "description": "The check-in date for the reservation"
                 },
                 "check_out_date": {
                   "type": "string",
                   "format": "date",
                   "description": "The check-out date for the reservation"
                 },
                 "number_of_guests": {
                   "type": "integer",
                   "description": "The number of guests for the reservation"
                 },
                 "special_requests": {
                   "type": "string",
                   "description": "Any special requests for the reservation"
                 }
               },
               "required": [
                 "hotel_id",
                 "guest_name",
                 "check_in_date",
                 "check_out_date",
                 "number_of_guests"
               ]
             },
             "Reservation": {
               "type": "object",
               "properties": {
                 "id": {
                   "type": "string",
                   "description": "The unique identifier for the reservation"
                 },
                 "hotel_id": {
                   "type": "string",
                   "description": "The ID of the hotel being reserved"
                 },
                 "guest_name": {
                   "type": "string",
                   "description": "The name of the guest making the reservation"
                 },
                 "check_in_date": {
                   "type": "string",
                   "format": "date",
                   "description": "The check-in date for the reservation"
                 },
                 "check_out_date": {
                   "type": "string",
                   "format": "date",
                   "description": "The check-out date for the reservation"
                 },
                 "number_of_guests": {
                   "type": "integer",
                   "description": "The number of guests for the reservation"
                 },
                 "special_requests": {
                   "type": "string",
                   "description": "Any special requests for the reservation"
                 }
               }
             }
           }
         }
       },
        "apiArtifacts": {
            "apiImages": {
                "api-landing-page-image": "/resources/content-mock/api-images/hotel-availability.jpeg",
                "api-detail-page-image": "/resources/content-mock/api-images/hotel-availability-mini.jpeg"
            }
        }

    },
    "serverUrl": {
        "sandboxUrl": "https://hotelavailability.api.sandbox.abc.com",
        "productionUrl": "https://hotelavailability.api.abc.com"
    }
}