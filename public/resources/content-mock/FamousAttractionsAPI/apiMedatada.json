{
    "apiInfo": {
        "apiName": "FamousAttractionsAPI",
        "openApiDefinition": {
         "openapi": "3.0.1",
         "info": {
           "title": "Famous Attractions API",
           "description": "API for retrieving information about famous attractions in a city",
           "version": "1.0.0"
         },
         "servers": [
           {
             "url": "https://stoplight.io/mocks/attractions/famous-attractions/413819828",
             "description": "Main (production) server"
           },
           {
             "url": "https://stoplight.io/mocks/attractions/famous-attractions/413819828",
             "description": "Staging server"
           }
         ],
         "paths": {
           "/attractions": {
             "get": {
               "summary": "Get a list of famous attractions",
               "description": "Retrieve a list of famous attractions in the specified city",
               "parameters": [
                 {
                   "in": "query",
                   "name": "city",
                   "schema": {
                     "type": "string"
                   },
                   "required": true,
                   "description": "The name of the city to search attractions in"
                 },
                 {
                   "in": "query",
                   "name": "category",
                   "schema": {
                     "type": "string",
                     "enum": [
                       "historical",
                       "natural",
                       "cultural",
                       "entertainment",
                       "architectural"
                     ]
                   },
                   "description": "The category of attractions to filter by"
                 }
               ],
               "responses": {
                 "200": {
                   "description": "A list of attractions",
                   "content": {
                     "application/json": {
                       "schema": {
                         "type": "array",
                         "items": {
                           "$ref": "#/components/schemas/Attraction"
                         }
                       }
                     }
                   }
                 },
                 "400": {
                   "description": "Invalid parameters"
                 },
                 "500": {
                   "description": "Server error"
                 }
               }
             }
           },
           "/attractions/{id}": {
             "get": {
               "summary": "Get details of a specific attraction",
               "description": "Retrieve detailed information about a specific attraction",
               "parameters": [
                 {
                   "in": "path",
                   "name": "id",
                   "schema": {
                     "type": "string"
                   },
                   "required": true,
                   "description": "The ID of the attraction"
                 }
               ],
               "responses": {
                 "200": {
                   "description": "Attraction details",
                   "content": {
                     "application/json": {
                       "schema": {
                         "$ref": "#/components/schemas/Attraction"
                       }
                     }
                   }
                 },
                 "404": {
                   "description": "Attraction not found"
                 },
                 "500": {
                   "description": "Server error"
                 }
               }
             }
           }
         },
         "components": {
           "schemas": {
             "Attraction": {
               "type": "object",
               "properties": {
                 "id": {
                   "type": "string",
                   "description": "The unique identifier for the attraction"
                 },
                 "name": {
                   "type": "string",
                   "description": "The name of the attraction"
                 },
                 "category": {
                   "type": "string",
                   "description": "The category of the attraction",
                   "enum": [
                     "historical",
                     "natural",
                     "cultural",
                     "entertainment",
                     "architectural"
                   ]
                 },
                 "description": {
                   "type": "string",
                   "description": "A detailed description of the attraction"
                 },
                 "location": {
                   "type": "string",
                   "description": "The location of the attraction"
                 },
                 "city": {
                   "type": "string",
                   "description": "The city where the attraction is located"
                 },
                 "opening_hours": {
                   "type": "string",
                   "description": "The opening hours of the attraction"
                 },
                 "price": {
                   "type": "number",
                   "format": "float",
                   "description": "The price of admission to the attraction"
                 },
                 "rating": {
                   "type": "number",
                   "format": "float",
                   "description": "The rating of the attraction"
                 }
               }
             }
           }
         }
       } ,
        "apiArtifacts": {
            "apiImages": {
                "api-landing-page-image": "/resources/content-mock/api-images/attractions.jpeg",
                "api-detail-page-image": "/resources/content-mock/api-images/attractions-mini.jpeg"
            }
        }

    },
    "serverUrl": {
        "sandboxUrl": "https://attractions.api.sandbox.abc.com",
        "productionUrl": "https://attractions.api.abc.com"
    }
}